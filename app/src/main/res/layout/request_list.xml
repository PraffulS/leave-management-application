<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewHero" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_orange">

                    <TableRow>
                        <TextView
                            android:text="Name"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/textViewName"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                    </TableRow>

                    <TableRow>
                        <TextView
                            android:text="Leave ID"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/textLeave_Id"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Leave Type"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/textLeave_Type"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Leave Reason"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/textLeave_Reason"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:singleLine="false"
                            />

                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="From"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/textFrom_Date"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="To"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/textTo_Date"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Total Days"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/textTotal_Days"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Load transferred to"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/textLoad_Transfer"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            />

                    </TableRow>
                    <TableRow android:weightSum="2">



                    </TableRow>


                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/accept"
                        android:textStyle="bold"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnback3"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:text="accept"
                        />

                    <Button
                        android:id="@+id/reject"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnback2"
                        android:textColor="@color/white"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:text="reject"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
